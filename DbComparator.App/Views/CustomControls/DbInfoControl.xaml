<UserControl x:Class="DbComparator.App.Views.CustomControls.DbInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             AllowDrop="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding DataBase.DbName}" HorizontalAlignment="Center"/>
        <Image Grid.Row="1" x:Name="img" Width="35"/>
    </Grid>
</UserControl>
