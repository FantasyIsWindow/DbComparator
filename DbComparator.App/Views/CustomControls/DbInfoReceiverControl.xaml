<UserControl x:Class="DbComparator.App.Views.CustomControls.DbInfoReceiverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             AllowDrop="True" 
             DataContextChanged="Receiver_DataContextChanged">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label HorizontalAlignment="Center" x:Name="label"/>
            <Image Grid.Row="1" x:Name="img" Width="40"/>             
        </Grid>
    </Grid>
</UserControl>

